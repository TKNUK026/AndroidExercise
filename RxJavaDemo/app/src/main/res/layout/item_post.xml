<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_user_post_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_user_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_user_post_avatar"
        android:layout_alignTop="@id/iv_user_post_avatar"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_user_post_avatar"
        android:gravity="center_vertical"
        android:text="hahahh"/>
    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user_post_avatar"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/iv_user_post_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_post_content"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="#000000"></View>
</RelativeLayout>