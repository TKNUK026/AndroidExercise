<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/tab_bg">

        <com.bigfat.weixin60ui.ChangeColorIconWithText
            android:id="@+id/tab_indicator_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            hyman:icon="@drawable/ic_menu_start_conversation"
            hyman:color="#ff45c01a"
            hyman:text="@string/app_name"
            hyman:textSize="12sp"
            android:padding="5dp" />

        <com.bigfat.weixin60ui.ChangeColorIconWithText
            android:id="@+id/tab_indicator_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            hyman:icon="@drawable/ic_menu_friendslist"
            hyman:color="#ff45c01a"
            hyman:text="@string/tab_contact"
            hyman:textSize="12sp"
            android:padding="5dp" />

        <com.bigfat.weixin60ui.ChangeColorIconWithText
            android:id="@+id/tab_indicator_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            hyman:icon="@drawable/ic_menu_emoticons"
            hyman:color="#ff45c01a"
            hyman:text="@string/tab_found"
            hyman:textSize="12sp"
            android:padding="5dp" />

        <com.bigfat.weixin60ui.ChangeColorIconWithText
            android:id="@+id/tab_indicator_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            hyman:icon="@drawable/ic_menu_allfriends"
            hyman:color="#ff45c01a"
            hyman:text="@string/tab_me"
            hyman:textSize="12sp"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>
